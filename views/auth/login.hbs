<body class="inicio">

<form action="/auth/login" method="POST" id="form-container">
<h2>Login</h2>
  <label  for="username">Username</label>
  <input class="box" id="username" type="text" name="username" placeholder="JonSnow">


  <label for="password">Password</label>
  <input class="box" id="password" type="password" name="password" placeholder="Your password">
  
  {{#if message }}
    <div class="error-message">{{ message }}</div>
  {{/if}}

  

  <button class="button">Login</button>

  <p class="account-message">
    Don't have an account yet?
    <a href="/auth/signup">Signup</a>
  </p>
</form>
</body>
